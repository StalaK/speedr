{
  "manifest_version": 3,
  "name": "Speedr",
  "version": "1.2",
  "description": "Speed-read the web!",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/48.svg",
    "default_title": "Speedr",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "48": "icons/48.svg",
    "96": "icons/96.svg"
  },
  "commands": {
    "read-whole-page": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Read the whole page"
    },
    "read-from-here": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Read from selection"
    },
    "read-to-here": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Read to selection"
    }
  }
}